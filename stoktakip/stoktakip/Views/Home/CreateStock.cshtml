@model stoktakip.Models.Stok

<div class="row justify-content-center">

    <div class="col-xl-8 col-lg-8 col-md-7">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">                    
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Stok Oluştur</h1>
                            </div>

<form class="user" method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="CreateStock">
    <div class="form-group">
        <input id="FirmaAdı" type="text" class="form-control form-control-user" required name="FirmaAdı" placeholder="Firma Adı">
    </div>
    <div class="form-group">
        <input id="UrunCinsi" type="text" class="form-control form-control-user" required name="UrunCinsi" placeholder="Ürün Cinsi">

    </div>
    <div class="form-group">
        <input id="UrunMiktarı" type="number" class="form-control form-control-user" required name="UrunMiktarı" placeholder="Ürün Miktarı">

    </div>
    <div class="form-group">
        <input id="UrunTuru" type="text" class="form-control form-control-user" required name="UrunTuru" placeholder="Ürün Türü">

    </div>
    <div class="form-group">
        <input id="tarih" type="date" class="form-control form-control-user" name="tarih" placeholder="Tarih">

    </div>
    <button type="submit" class="btn  btn btn-primary btn-user btn-block">Kaydet</button>

</form>
</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

